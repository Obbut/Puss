// MARK: SupportedPrimitives.ejs
<%
supportedPrimitives.forEach(primitive => {
	%>
extension <%- primitive %> : Serializable {
    /// Tries to initialize a <%- primitive %> from a BSON Primitive
    ///
    /// - parameter source: The BSON primitive
    /// - throws: When the primitive is of the wrong type
	public init(restoring source: Primitive, key: String) throws {
		self = try Meow.Helpers.requireValue(<%- primitive %>(source), keyForError: key)
	}

    /// Serializes the <%- primitive %> into a BSON primitive
    ///
    /// It just returns `self`
	public func serialize() -> BSON.Primitive {
		return self
	}
}
	<%
});
%>